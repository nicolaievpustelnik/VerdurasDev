<div class="container">
    <form action="actualizarProductoProveedor/{{producto._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <fieldset>
            <legend class="mt-5 mb-3">Editar producto</legend>
            <div class="form-group">
                <label class="form-label mt-4">Descripci√≥n</label>
                <input type="text" class="form-control" name="descripcion" placeholder="Ingresar descripcion"
                    value="{{producto.descripcion}}">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Proveedor</label>
                <input type="text" class="form-control" name="idProveedor" placeholder="Ingresar Proveedor"
                    value="{{producto.idProveedor}}">
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Precio de Compra</label>
                <input type="text" class="form-control" name="precioCompra" placeholder="Ingresar Precio de Compra"
                    value="{{producto.precioCompra}}">
            </div>
            <button type="submit" class="btn btn-primary mt-3"> Guardar</button>
    </form>
</div>